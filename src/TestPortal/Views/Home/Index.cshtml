@{
    ViewData["Title"] = "Fitness Tracker";
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="input-sm" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="input-sm" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Age</label>
            <input type="number" min="1" max="105" class="input-sm" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Weight</label>
            <input type="number" step="0.01" min="1" class="input-sm" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Goals</label>
            <textarea rows="3"></textarea>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <button class="btn btn-block btn-primary">Submit</button>
    </div>
</div>